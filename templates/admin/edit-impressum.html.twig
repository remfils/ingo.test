{% extends 'admin/admin.html.twig' %}

{% block main_title %}
    Editing Page: Impressum
{% endblock %}

{% block content %}
    <form action="POST" class="form container">
        <div class="form-group">
            <label for="page_title">Page Title:</label>
            <input type="text" name="page_title" class="form-control" />
        </div>

        <div class="form-group">
            <label for="info_header">Header:</label>
            <input type="text" name="info_header" class="form-control" />
        </div>

        <div class="form-group">
            <label for="info_title">Title:</label>
            <input type="text" name="info_title" class="form-control" />
        </div>

        <div class="form-group">
            <label for="info_label_first">First Label:</label>
            <input type="text" name="info_label_first" class="form-control" />
        </div>

        <div class="form-group">
            <label for="info_label_second">Second Label:</label>
            <input type="text" name="info_label_second" class="form-control" />
        </div>

        <div class="form-group">
            <label for="info_text">Text</label>
            <textarea name="info_text" cols="30" rows="10" class="form-control"></textarea>
        </div>
    </form>
{% endblock %}